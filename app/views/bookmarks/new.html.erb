<h1>Add a new Bookmark to <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.input :movie_id, collection: Movie.all.map { |movie| [movie.title, movie.id] }, label: "Choose a movie", include_blank: "Select a movie" %>
  </div>

  <div class="form-group">
    <%= f.input :comment, label: "Your comment", input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Add Bookmark", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to List', list_path(@list), class: 'btn btn-secondary' %>
